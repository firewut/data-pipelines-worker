{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$defs": {
        "slug": {
            "type": "string",
            "pattern": "^[-\\w]+$"
        },
        "block": {
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/$defs/slug"
                },
                "slug": {
                    "$ref": "#/$defs/slug"
                },
                "description": {
                    "type": "string",
                    "minLength": 20
                },
                "output_config": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["array", "number", "string", "boolean"]
                        }
                    },
                    "additionalProperties": true,
                    "required": ["type"]
                }
            },
            "anyOf": [
                {
                    "properties": {
                        "input_config": {
                            "type": "object",
                            "properties": {
                                "property": {
                                    "type": "object",
                                    "patternProperties": {
                                        "^.*$": {
                                            "type": "object",
                                            "properties": {
                                                "origin": {
                                                    "type": "string"
                                                },
                                                "xpath": {
                                                    "type": "string"
                                                }
                                            },
                                            "additionalProperties": true,
                                            "required": ["origin"]
                                        }
                                    }
                                },
                                "type": {
                                    "type": "string",
                                    "enum": ["array", "number", "string", "boolean"]
                                },
                                "parallel": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "format_vars": {
                                    "type": "object",
                                    "patternProperties": {
                                        "^.*$": {
                                            "type": "object",
                                            "properties": {
                                                "origin": {
                                                    "type": "string"
                                                },
                                                "xpath": {
                                                    "type": "string"
                                                }
                                            },
                                            "additionalProperties": true,
                                            "required": ["origin"]
                                        }
                                    }
                                }
                            },
                            "additionalProperties": true,
                            "required": ["property"]
                        }
                    },
                    "required": ["input_config"]
                },
                {
                    "properties": {
                        "input": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "required": ["input"]
                }
            ],
            "required": [
                "id",
                "slug",
                "description"
            ]
        }
    },
    "type": "object",
    "properties": {
        "slug": {
            "$ref": "#/$defs/slug"
        },
        "title": {
            "type": "string",
            "minLength": 10
        },
        "description": {
            "type": "string",
            "minLength": 20
        },
        "blocks": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/block"
            }
        }
    },
    "required": [
        "slug",
        "title",
        "description",
        "blocks"
    ],
    "additionalProperties": false
}